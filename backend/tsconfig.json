{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"]
    }
  },
  "lib": ["ES2023"],
  "include": ["src/**/*.ts", "eslint.config.mts"]
}
